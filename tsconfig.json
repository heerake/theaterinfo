{
    "compilerOptions": {
        "strictNullChecks": true,
        "moduleResolution": "node",
        "module": "es2015",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "allowJs": false,
        "declaration": false,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "target": "es5",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "importHelpers": true,
        "lib": [
            "dom",
            "es7",
            "es2017.object"
        ]
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}